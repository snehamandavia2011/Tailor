<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar" />


    <style name="AppThemeBlack" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="styTitleWhiteSingleLine">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="stySubTitleWhiteSingleLine">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="stySubTitleRedSingleLine">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="styTitleRedSingleLine">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="stySubTitleBlackSingleLine">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="stySubTitleBlueSingleLine">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/light_blue_A400</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="stySubTitleGreySingleLine">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="styDescBlackSingleLine">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="styDescBlackSingleLineBold">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="styDescGreenSingleLine">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/Success</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="styDescWhiteSingleLine">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="styDescGreySingleLine">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="styDescGreyMultiLine">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">false</item>
    </style>


    <style name="stySmallRed">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="styDescRedSingleLine">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>


    <style name="stySmallBlack">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="btnRed">
        <item name="android:background">@drawable/red_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="styDescBlackMultiLine">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="stySwitch" parent="Theme.AppCompat.Light">
        <!--  active thumb & track color (30% transparency)
     -->
        <item name="colorControlActivated">@color/red</item>
        <item name="colorSwitchThumbNormal">@android:color/darker_gray</item>
    </style>

    <style name="stySpinnerStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="styBigWhite">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="styBigRed">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
